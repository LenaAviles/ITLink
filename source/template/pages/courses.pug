				ul.pagination__list
					li.pagination__item
						a(href="#").pagination__link 1
					li.pagination__item
						a(href="#").pagination__link 2
					li.pagination__item
						a(href="#").pagination__link 3
					li.pagination__item
						a(href="#").pagination__link 4
					li.pagination__item
						a(href="#").pagination__link 5
				a(href="#").pagination__control.pagination__control_right &#8250
