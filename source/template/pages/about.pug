extends ../main-layout.pug
block content
    section.section.hero
        .hero__bg
            img(src="assets/img/bg/portfolio.jpg", alt="").hero__bg-img

        ul.socials
            each item in ['fb', 'gh', 'in']
                li.socials__item
                    a(href="#" class=`socials__link socials__link_${item}`)                    
        a(href="#").hamburger
        a(href="#").down-arrow
            img(src="assets/img/icons/arrow_down.svg", alt="").down-arrow__icon

        .hero__title            
            img(src="assets/img/decor/portfolio-header.png", alt="").section-title
            .user.hero__user-block
                .user__photo
                    .user__photo-avatar
                        img(src="assets/img/content/user.jpg", alt="").user__photo-img
                .user__name Lena Ricabal Aviles
                .user__desc Personal review

    section.section.about
        .about__left
            svg(
                viewbox="0 0 1000 100" 
                preserveAspectRatio="none"
                class="triangle triangle_fill_white about__triangles")
                polygon(points="0,0 0,100 1000,100")
            +title('ABOUT ME', 'about-header.png', 'about__section-title')
            .user-about
                .user-about__picture
                    img(src="assets/img/content/user.jpg", alt="").user-about__photo-img
                .user-about__title.subtitle
                    | Who am I
                .user-about__text
                    p I am a front-end developer. I'm 33.
                    p I like it! 

        .about__right
            svg(
                viewbox="0 0 1000 100" 
                preserveAspectRatio="none"
                class="triangle triangle_fill_beige about__triangles")
                polygon(points="0,100 1000,100 1000,0")
            .about-data__description
                .about-data__title
                    .subtitle What can I do
                .about-data__text
                    p Lorem ipsum dolor
            .about-data__content
            ul.skills
                each skill in skills
                    each skillsArray, skillName in skill
                        li.skills__item
                            .skill-section
                                .skill-section__title= skillName
                                ul.skill-section__list  
                                    each skillTitle in skillsArray
                                        li.skills-section__item
                                            .skill
                                                svg.skill__circle
                                                .skill__name= skillTitle
                //- ul.skills
                //-     each skill in ['Frontend', 'Backend', 'Workflow']
